    else:\par
        if a["ingredients"]["water"] < b["water"] and a["ingredients"]["coffee"] < b["coffee"]:\par
            return True\par
        else:\par
            return False   \par
\par
def payment_process(coffee, cup):\par
    cost = coffee["cost"]    \par
    penny = int(input("Insert Pennies: ")) * 0.01\par
    nickel = int(input("Insert Nickels: ")) * 0.05\par
    dime = int(input("Insert Dimes: ")) * 0.10\par
    quarter = int(input("Insert Quarters: ")) * 0.25\par
    total = penny + nickel + dime + quarter\par
    if total > cost:\par
        print(f"Thank you, here is the change back: $\{round(total - cost, 2)\}")\par
        return True\par
    elif total == cost:\par
        print(f"Thank you.")\par
        return True\par
