\par
def ingredients_check(a, b):    \par
    if "milk" in a["ingredients"]:\par
        if a["ingredients"]["water"] < b["water"] and a["ingredients"]["coffee"] < b["coffee"] and a["ingredients"]["milk"] < b["milk"]:\par
            return True\par
