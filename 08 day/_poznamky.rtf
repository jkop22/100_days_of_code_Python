def encrypt(msg, s_value):\par
    secret = ""\par
    for i in msg:\par
        if i not in alphabet:\par
            secret += i\par
        elif alphabet.index(i) + s_value < len(alphabet):\par
            secret += alphabet[alphabet.index(i) + s_value]\par
        else:\par
